package com.github.geekuniversity_java_215.cmsbackend.mailsystem;

import com.github.geekuniversity_java_215.cmsbackend.mailsystem.service.MailService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.ApplicationArguments;
import org.springframework.boot.ApplicationRunner;
import org.springframework.stereotype.Component;

@Component
public class AppStartupRunner implements ApplicationRunner {

    private MailService mailService;

    @Autowired
    public AppStartupRunner(MailService mailService) {
        this.mailService = mailService;
    }

    @Override
    public void run(ApplicationArguments args) throws Exception {


        mailService.sendRegConfirmation();
    }
}
